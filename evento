<!DOCTYPE html>
<html lang="pt-BR">
<head>
  <meta charset="UTF-8" />
  <title>Detalhes do Evento</title>
  <link rel="stylesheet" href="estilo.css" />
</head>
<body>
  <div id="evento-container" class="evento-container">
    <!-- Conteúdo será inserido via JS -->
  </div>

  <script>
    const urlParams = new URLSearchParams(window.location.search);
    const idEvento = urlParams.get('id');

    fetch(`api/evento.php?id=${idEvento}`)
      .then(response => response.json())
      .then(evento => {
        const container = document.getElementById('evento-container');
        container.innerHTML = `
          <div class="banner">
            <img src="${evento.imagem}" alt="Banner do Evento" class="imagem-evento">
          </div>
          <div class="info">
            <h1>${evento.nome}</h1>
            <p><strong>Line-up:</strong> ${evento.line_up}</p>
            <p><strong>Data:</strong> ${evento.data}</p>
            <p><strong>Endereço:</strong> ${evento.endereco}</p>
            <p><strong>Descrição:</strong> ${evento.descricao}</p>
          </div>
          <div class="ingressos">
            <a href="${evento.link_ingresso}" target="_blank" class="btn-ingresso">Comprar Ingressos</a>
          </div>
        `;
      })
      .catch(err => {
        console.error(err);
        document.getElementById('evento-container').innerHTML = "<p>Erro ao carregar o evento.</p>";
      });
  </script>
</body>
</html>
